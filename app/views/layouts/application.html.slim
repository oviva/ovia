doctype html
html
	head
		title
			- if content_for?(:title) 
				== yield(:title) 
			- else
				| Ticketee

		= stylesheet_link_tag 'screen', 'application',  'media' => 'screen'
		= javascript_include_tag 'application'
		= csrf_meta_tags
		
	body
		div class='container'
			= render 'layouts/header'

			div id='main'
				section
					= render 'layouts/header_link'
					- flash.each do |key, value| 
							br class='clear'
							div id='flash' class='#{key}'
								= value
					== yield
				= render 'layouts/footer'