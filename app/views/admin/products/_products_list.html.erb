<hr />
<table class="table table-striped" summary="Products List" id="data-list">
	<thead>
		<tr>
			<th>Product Name</th>
			<th>Code</th>
			<th>Price</th>
			<th>Stock</th>
			<th>Visible?</th>
			<th>Category</th>
			<th>Action</th>
			<th>Last Updated</th>
		</tr>
	</thead>
	<tbody>
		<% @products.each do |product| %>
		<tr>
			<td><b><%= link_to product.name, admin_product_path(product) %></b></td>
			<td><b><span class="code"><%= product.code %></span></b></td>
			<td><%= number_to_currency(product.price, :unit => "Â£") %></td>
			<td><%= product.quantity %></td>
			<td><%= product.visible %></td>
			<td><%= product.category.name %></td>		
			<td><%= link_to icon(:show), admin_product_path(product) %>
					<%= link_to icon(:edit), edit_admin_product_path(product) %>
					<%= link_to icon(:delete), admin_product_path(product), :method => :delete,
							:confirm => "Are you sure you want to delete this product?"%></td>
			<td><b><%= time_ago_in_words(product.updated_at) %> ago by<b></td>		
		</tr>
		<% end %>
	</tbody>
</table>
