<%= paginate @products %>
<hr />
<table class="table table-striped" summary="User products">
	<thead>
		<tr>
			<th><%=link_to 'Product Name', '?by=name'%></th>
			<th><%=link_to 'Code', '?by=code'%> </th>
			<th><%=link_to 'Price', '?by=price'%></th>
			<th><%=link_to 'Stock', '?by=quantity'%></th>
			<th><%=link_to 'Visible?', '?by=visible'%></th>
			<th><%=link_to 'Category', '?by=category_id'%></th>
			<th>Action</th>
			<th>Last Updated</th>			
		</tr>
	</thead>
	<% @products.each do |product| %>
	<tr>
		<td><b><%= link_to product.name, admin_product_path(product) %></b></td>
		<td><b><span class="code"><%= product.code %></span></b></td>
		<td><%= number_to_currency(product.price, :unit => "Â£") %></td>
		<td><%= product.quantity %></td>
		<td><%= product.visible %></td>
		<td><%= product.category.name %></td>		
		<td>
			<%= link_to "", admin_product_path(product), :class => "icon-search" %>
			<%= link_to "", edit_admin_product_path(product), :class => "icon-pencil" %>
			<%= link_to "", admin_product_path(product), :class => "icon-remove", 
														:method => :delete,
														:confirm => "Are you sure you want to delete this product?"%></td>
		<td><b><%= time_ago_in_words(product.updated_at) %> ago by<b></td>
		
	</tr>
	<% end %>
</table>