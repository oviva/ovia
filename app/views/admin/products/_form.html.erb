<%= form_for [:admin, @category,  @product] do |f| %>
<%= f.error_messages %>
<p>
	<%= f.label :name %><br />
	<%= f.text_field :name %>
</p>

<p>
	<%= f.label :code %><br />
	<%= f.text_field :code %>
</p>

<p>
	<%= f.label :description %><br />
	<%= f.text_area :description %>
</p>

<%= f.submit :class => 'btn' %>
<% end %>