<div class="row">
	<div class="span9">
		<h2> <%= link_to "Home", admin_root_path %> / Category list </h2>
		<span class="lead">
			Showing all "<strong><%= @categories.count %></strong>" Categories.
		</span>
	</div>
	<div class="span3">
		<%= link_to "New Category", new_admin_category_path,  :class => 'btn btn-success btn-large' %>
	</div>
</div> 
<hr />
<table class="table table-striped">
	<thead>
		<tr>
			<th>Category Name</th>
			<th>Descrption</th>
			<th>Action</th>
			<th>Last Updated</th>
		</tr>
	</thead>
	<tbody>
		<% @categories.each do |category| %>
		<tr>
			<td><b><%= link_to "#{category.name} (#{category.products.count})", admin_category_path(category)%></b></td>
			<td><%= category.description %></td>
			<td><%= link_to icon(:show), admin_category_path(category) %>
				<%= link_to icon(:edit), edit_admin_category_path(category) %>
				<%= link_to icon(:delete), admin_category_path(category),  :method => "delete",
												:confirm => "Are you sure you want to delete this category?" %></td>
			<td><b><%= time_ago_in_words(category.updated_at) %> ago<b></td>
		</tr>
		<% end %>
	</tbody>
</table>
<hr/>