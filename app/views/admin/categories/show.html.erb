<h1><%= link_to"Category list", "../../admin/categories" %> / <%= @category.name %></h1>

<% unless @products.empty? %>
	<p class="lead">	
			Showing all "<strong><%= @category.products.count %></strong>" products from <%= @category.name %>.
	</p>
<% end %>

<%= link_to "New Product", new_admin_product_path, :class => 'btn btn-primary' %>

<%= link_to "Edit Category", edit_admin_category_path(@category), :class => 'btn btn-primary'  %>

<%= link_to "Delete Category", admin_category_path(@category),	
													:method => :delete,
													:confirm => "Are you sure you want to delete this category?", 
													:class => 'btn' %>
<hr />

<% unless @category.products.empty? %>
<%= render 'admin/products/products_list' %>
<% else %>
		<p class="lead"> Ouch! No product here. Please add some first.</p>
<% end %>
