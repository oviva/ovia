<h1>Pages list</h1> 
<p class="lead">
	Showing all "<strong><%= @pages.count %></strong>" Pages.
</p>
<%= link_to "New Page", new_admin_page_path,  :class => 'btn btn-primary' %>
<hr />
<table class="table table-striped">
		<thead>
			<tr>
				<th>Page Name</th>
				<th>Action</th>
				<th>Last Updated</th>
			</tr>
		</thead>
		
		<% @pages.each do |page| %>
		<tr>
			<td><b><%= link_to page.name, admin_page_path(page.id) %></b>
			</td>
			
			<td>
					<%= link_to "", admin_page_path(page.id) , :class => "icon-search" %>
					<%= link_to "", edit_admin_page_path(page.id), :class => "icon-pencil" %>
					<%= link_to "", admin_page_path(page.id), :class => "icon-remove", 
													:method => :delete,
													:confirm => "Are you sure you want to delete this page?"%>
			</td>
			<td><b><%= time_ago_in_words(page.updated_at) %> ago<b></td>
		</tr>
		<% end %>
</table>