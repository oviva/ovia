<%= simple_form_for [:admin, @product, @color_size] do |f| %>
	<%= f.error_messages %>
	<%= f.input :color_id, 	:collection => @colors, :as => :radio_buttons, :item_wrapper_class => 'inline'  %> <hr/>
	<%= f.input :size_id, 	:collection => @sizes, 	:as => :radio_buttons, :item_wrapper_class => 'inline' %>	<hr/>
	<%= f.input :quantity %>
	<%= f.button :submit, :class => 'btn' %>
<% end %>

