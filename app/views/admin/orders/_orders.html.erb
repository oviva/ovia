<table class="table table-striped" summary="Order">
	<thead>
		<tr>
			<th>Order Name</th>
			<th>Amount</th>	
			<th>Action</th>
			<th>Created at</th>	
					
		</tr>
	</thead>
	<% @orders.each do |order| %>
	<tr>
		<td><b><%= link_to order.order_no, admin_order_path(order) %></b></td>
		<td><b><%= number_to_currency(order.total_amount, :unit => "Â£") %><b></td>	
		<td>
			<%= link_to icon(:show), admin_order_path(order) %>
			<%= link_to icon(:edit), edit_admin_order_path(order) %>
			<%= link_to icon(:delete), admin_order_path(order), :method => :delete,
											:confirm => "Are you sure you want to delete this order?" %>
		</td>
		<td><b><%= time_ago_in_words(order.created_at) %> ago<b></td>
	</tr>
	<% end %>
</table>