<h1>Order list</h1> 
<p class="lead">
	Showing all "<strong><%= @orders.count %></strong>" Order.
</p>
<%= link_to "New Order Option", new_admin_order_path,  :class => 'btn btn-primary' %>
<table class="table table-striped" summary="Order">
	<thead>
		<tr>
			<th>Order Name</th>
			<th>Amount</th>	
			<th>Action</th>
			<th>Created at</th>	
					
		</tr>
	</thead>
	<% @orders.each do |order| %>
	<tr>
		<td><b><%= link_to order.order_no, admin_order_path(order) %></b></td>
		<td><b><%= number_to_currency(order.total_amount, :unit => "Â£") %><b></td>	
		<td>
			<%= link_to "", admin_order_path(order) , :class => "icon-search" %>
			<%= link_to "", edit_admin_order_path(order), :class => "icon-pencil" %>
			<%= link_to "", admin_order_path(order), :class => "icon-remove", 
											:method => :delete,
											:confirm => "Are you sure you want to delete this order?"%>
		</td>
		<td><b><%= time_ago_in_words(order.created_at) %> ago<b></td>
		
	</tr>
	<% end %>
</table>

<%= link_to "New Order", new_admin_order_path, :class => 'btn' %>
